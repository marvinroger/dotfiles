[user]
  name = Marvin ROGER
  email = marvinroger@users.noreply.github.com
  signingKey = {{ joinPath .chezmoi.homeDir ".ssh/id_ed25519.pub" }}
[core]
  excludesFile = ~/.gitignore_global
  ignoreCase = false
[pull]
  ff = only
[init]
  defaultBranch = main
[merge]
  conflictStyle = diff3
[blame]
  ignoreRevsFile = .git-blame-ignore-revs
[gpg]
  format = ssh
[commit]
  gpgSign = true
[tag]
  gpgSign = true
